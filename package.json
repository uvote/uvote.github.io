{
  "name": "uvote",
  "version": "0.0.0",
  "private": true,
  "description": "",
  "type": "module",
  "scripts": {
    "build": "npm run build_js",
    "build_formatjs_types": "node scripts/build_formatjs_types.js",
    "build_html": "node scripts/build_html.js",
    "build_js": "tsc && vite build",
    "build_manifest": "node scripts/build_manifest.js",
    "check_types": "tsc --noEmit --project .",
    "deploy": "node scripts/deploy.cjs",
    "eslint": "npm run eslint:scripts && npm run eslint:app",
    "eslint:scripts": "eslint --fix --ext .js scripts/",
    "eslint:app": "eslint --fix --ext .ts --ext .tsx app/",
    "forge_build": "forge build",
    "forge_test": "forge test --gas-report",
    "formatjs_compile": "npm run formatjs_compile:en && npm run formatjs_compile:it",
    "formatjs_compile:en": "formatjs compile translations/en.json --ast --out-file public/translations/en-${npm_package_version}.json",
    "formatjs_compile:it": "formatjs compile translations/it.json --ast --out-file public/translations/it-${npm_package_version}.json",
    "generate_webapp_files": "npm run build_html && npm run build_manifest && npm run formatjs_compile && npm run build_formatjs_types && npm run wagmi_generate",
    "jest": "jest",
    "local-blockchain": "anvil --config-out local-blockchain/anvil-config.json --state local-blockchain/anvil-state.json",
    "local-blockchain_create_NicknameRegistry": "node scripts/local-blockchain_forge_create.js NicknameRegistry",
    "local-blockchain_create_PollFactoryMVP": "node scripts/local-blockchain_forge_create.js PollFactoryMVP",
    "local-blockchain_update_env_contract_NicknameRegistry": "node scripts/local-blockchain_update_env_contract.js NicknameRegistry",
    "local-blockchain_update_env_contract_PollFactoryMVP": "node scripts/local-blockchain_update_env_contract.js PollFactoryMVP",
    "lint-staged": "lint-staged",
    "markdownlint": "markdownlint-cli2 \"**/*.md\" \"#node_modules\" \"#contracts/lib/\"",
    "postbuild": "cp dist/index.html dist/404.html",
    "prebuild": "npm run test && npm run check_types && npm run eslint",
    "preformatjs_compile": "rm -rf public/translations/",
    "predeploy": "npm run build",
    "prestart": "npm run generate_webapp_files",
    "pretest": "npm run generate_webapp_files",
    "preview": "vite preview --host",
    "start": "vite --host --mode development",
    "test": "npm run jest && npm run forge_test",
    "wagmi_generate": "wagmi generate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fibo/uvote.git"
  },
  "keywords": [],
  "author": "Gianluca Casati (http://fibo.github.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fibo/uvote/issues"
  },
  "homepage": "https://uvote.github.io",
  "dependencies": {
    "@tanstack/react-query": "5.0.5",
    "buffer": "^6.0.3",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-intl": "^6.4.4",
    "react-router-dom": "^6.13.0",
    "trunx": "^0.45.7",
    "util": "^0.12.4",
    "viem": "^2.7.1",
    "wagmi": "^2.5.5"
  },
  "devDependencies": {
    "@formatjs/cli": "^6.1.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@wagmi/cli": "^2.1.2",
    "eslint": "^8.43.0",
    "eslint-plugin-formatjs": "^4.10.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "gh-pages": "^5.0.0",
    "lint-staged": "^13.2.2",
    "markdownlint-cli2": "^0.13.0",
    "markdownlint-rule-github-internal-links": "^0.1.0",
    "markdownlint-rule-relative-links": "^2.3.2",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.8",
    "prettier-plugin-jsdoc": "^0.4.2",
    "read-file-utf8": "^3.0.0",
    "sass": "^1.62.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "write-file-utf8": "^3.0.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{cjs,js,json,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write",
      "markdownlint-cli2 --fix"
    ],
    "*.sol": [
      "forge fmt"
    ]
  },
  "pre-commit": [
    "check_types",
    "lint-staged",
    "test"
  ],
  "prettier": {
    "plugins": [
      "prettier-plugin-jsdoc"
    ],
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "options": {
          "tsdoc": true
        }
      }
    ]
  }
}
