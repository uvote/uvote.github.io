{
  "name": "uvote",
  "version": "0.0.0",
  "private": true,
  "description": "",
  "type": "module",
  "scripts": {
    "build": "npm run build_html && npm run build_css && npm run build_js",
    "build_css": "sh scripts/build_css.sh",
    "build_html": "node scripts/build_html.js",
    "build_js": "node scripts/build_js.js",
    "check_types": "tsc --noEmit --project .",
    "cleanup": "npm run cleanup_public_dir",
    "cleanup_public_dir": "rm -f public/*.html public/uvote.css public/uvote.js",
    "deploy": "node scripts/deploy.cjs",
    "eslint": "eslint --fix --ext .ts --ext .tsx .",
    "lint-staged": "lint-staged",
    "prebuild": "npm run cleanup",
    "predeploy": "npm run build",
    "prestart": "npm run build",
    "start": "esbuild --servedir=public",
    "test": "npm run check_types && npm run eslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fibo/uvote.git"
  },
  "keywords": [],
  "author": "Gianluca Casati (http://fibo.github.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fibo/uvote/issues"
  },
  "homepage": "https://uvote.github.io",
  "dependencies": {
    "@metamask/sdk": "^0.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "trunx": "^0.45.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "esbuild": "^0.17.18",
    "eslint": "^8.43.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "gh-pages": "^5.0.0",
    "lint-staged": "^13.2.2",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.8",
    "prettier-plugin-jsdoc": "^0.4.2",
    "prettier-plugin-sh": "^0.12.8",
    "sass": "^1.62.1",
    "typescript": "^5.0.4"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "eslint-plugin-tsdoc",
      "import",
      "jsx-a11y",
      "prettier",
      "react",
      "react-hooks",
      "simple-import-sort"
    ],
    "rules": {
      "@typescript-eslint/no-empty-function": "off",
      "import/first": "error",
      "import/newline-after-import": "error",
      "import/no-cycle": "error",
      "jsx-a11y/aria-unsupported-elements": "error",
      "jsx-a11y/role-has-required-aria-props": "error",
      "no-case-declarations": "error",
      "no-console": [
        "error",
        {
          "allow": [
            "error",
            "info",
            "warn"
          ]
        }
      ],
      "prettier/prettier": "error",
      "react-hooks/exhaustive-deps": "error",
      "react-hooks/rules-of-hooks": "error",
      "react/display-name": "error",
      "react/hook-use-state": [
        "error",
        {
          "allowDestructuredState": true
        }
      ],
      "react/jsx-boolean-value": "error",
      "react/jsx-key": "error",
      "react/jsx-newline": [
        "warn",
        {
          "allowMultilines": true,
          "prevent": true
        }
      ],
      "react/jsx-no-comment-textnodes": "error",
      "react/jsx-no-duplicate-props": "error",
      "react/jsx-no-leaked-render": "error",
      "react/jsx-no-useless-fragment": "error",
      "react/jsx-pascal-case": [
        "error",
        {
          "allowLeadingUnderscore": true
        }
      ],
      "react/jsx-sort-props": [
        "error",
        {
          "noSortAlphabetically": true,
          "reservedFirst": true,
          "shorthandFirst": true
        }
      ],
      "react/jsx-wrap-multilines": "error",
      "react/no-danger": "error",
      "react/no-deprecated": "error",
      "react/prop-types": "off",
      "react/self-closing-comp": [
        "error",
        {
          "component": true,
          "html": true
        }
      ],
      "simple-import-sort/exports": "error",
      "simple-import-sort/imports": "error",
      "tsdoc/syntax": "error"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "lint-staged": {
    "*.{cjs,js,ts,tsx}": [
      "prettier --write"
    ],
    "*.{css,json,md,scss,sh}": [
      "prettier --write"
    ]
  },
  "pre-commit": [
    "lint-staged",
    "test"
  ],
  "prettier": {
    "plugins": [
      "prettier-plugin-jsdoc",
      "prettier-plugin-sh"
    ],
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "options": {
          "tsdoc": true
        }
      }
    ]
  }
}
